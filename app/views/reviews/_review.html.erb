<div class="span4" >

  <div class="story" id="review-<%= review.id %>">
    <h3><%= link_to review.store.name, store_path(review.store.slug) %></h3>
    <%= link_to (image_tag review.store_photo), store_path(review.store.slug), class: "review-photo" %>
    <div>
      <%= image_tag review.user.avatar, :class => 'avatar' %>
      <% if review.rating == "Thumbs Up" %>
        <%= image_tag('Thumbs-Up.png', size: "50x50", class: 'icon') %>
      <% else %>
        <%= image_tag('ThumbsDown.png', size: "50x50", class: 'icon') %>
      <% end %>
      <div>
        <h4 class="review-title"><%= review.short_title %></h4>
      </div>
      <p class='user-name'>
        <%= review.user.name %> - <%= time_ago_in_words(review.created_at) + ' ago' %>
      </p>

      <p class='review-body'>
        <%= review.body %>
      </p>

      <hr>

      <div id='review-counts'>
        <%= image_tag('Thumbs-Up.png', size: "36x36") %>
        <%= image_tag('ThumbsDown.png', size: "36x36") %></br>
        <div class="percent">
          <%= review.store.percent_positive %>%
        </div>
        <div class="percent">
          <%= review.store.percent_negative %>%
        </div>
          <% if review.store.total_reviews == 1 %>
            <p class="pull-right"><%= review.store.total_reviews %> Total Review</p>
          <% else %>
            <p class="pull-right"><%= review.store.total_reviews %> Total Reviews</p>
          <% end %>
      </div>
    </div>
  </div>
</div>
